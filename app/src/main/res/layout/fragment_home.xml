<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_main"
    android:layout_width="410dp"
    android:layout_height="1000dp"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="@color/mint1"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/notification"/>
            <ImageView
                android:id="@+id/rectangle_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-30dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="102dp"
                android:text="김민영님의 통장"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/pay_image"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:layout_gravity="left"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="117dp"
                android:background="@drawable/pay"/>

            <TextView
                android:id="@+id/pay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="327dp"
                android:layout_marginTop="113dp"
                android:text="결제"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="240dp"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">
        <ImageView
            android:id="@+id/Rectangle_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button_pay"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/background_rounding"
            android:backgroundTint="@color/mint2"
            android:text="송금"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/account_name1"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="농협체크카드"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/account_number1"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="312-3425-5643-09"
            android:textColor="@color/gray1"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/account_amount1"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:text="3,425,000원"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/Rectangle_72"
            android:layout_width="280dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="140dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray2"/>

            <ImageView
                android:id="@+id/image_money"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="148dp"
                android:background="@drawable/image_money"/>
        <TextView
            android:id="@+id/donate_money1"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="148dp"
            android:text="보유 기부금액"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/donate_result"
                android:layout_width="50dp"
                android:layout_height="12dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="148dp"
                android:text="124,140원"
                android:textColor="@color/black"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/money_more"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="153dp"
                android:background="@drawable/image_direct"/>

        <ImageView
            android:id="@+id/Rectangle_73"
            android:layout_width="280dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="170dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray2"/>

            <ImageView
                android:id="@+id/image_donate"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="178dp"
                android:background="@drawable/image_donate"/>
        <TextView
            android:id="@+id/my_donate1"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="178dp"
            android:text="나의 기부 레벨"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/level_result"
                android:layout_width="40dp"
                android:layout_height="12dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="178dp"
                android:text="노랑나비"
                android:textColor="@color/black"
                android:textSize="10dp"/>

        <ImageView
            android:id="@+id/Rectangle_76"
            android:layout_width="280dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray2"/>

            <ImageView
                android:id="@+id/image_pay"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="208dp"
                android:background="@drawable/image_pay"/>
        <TextView
            android:id="@+id/carde_use1"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="208dp"
            android:text="카드 사용내역"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"/>

            <ImageView
                android:id="@+id/pay_more"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="217dp"
                android:background="@drawable/image_direct"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">
        <ImageView
            android:id="@+id/Rectangle_11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button_donate1"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_rounding"
            android:backgroundTint="@color/mint2"
            android:text="참여하기"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_name2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="김민영"
            android:textColor="@color/gray3"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/user_question1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:text="님에게"
            android:textColor="@color/gray3"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/user_question2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="45dp"
            android:text="가장 기억에 남는 기부는 무엇인가요?"
            android:textColor="@color/gray3"
            android:textSize="13dp"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>